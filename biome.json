{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!node_modules",
      "!.next",
      "!dist",
      "!build",
      "!src/components/Fretboard_backup.tsx",
      "!src/components/Fretboard_old.tsx",
      "!src/components/Fretboard_old2.tsx",
      "!src/components/FretboardOverlay.tsx",
      "!src/components/FretboardOverlay2.tsx",
      "!src/components/FretboardOverlay3.tsx",
      "!src/components/FretboardOverlay4.tsx",
      "!src/components/FretboardOverlay.css.ts",
      "!src/components/FretboardOverlay2.css.ts",
      "!src/components/FretboardOverlay3.css.ts",
      "!src/components/FretboardOverlay4.css.ts",
      "!src/components/**/*.bak.*",
      "!src/components/**/*_bak*.*",
      "!src/components/**/*_old*.*",
      "!src/components/**/*backup*.*"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "domains": {
      "next": "recommended",
      "react": "recommended"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "off"
      }
    }
  }
}
